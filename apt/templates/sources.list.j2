# {{ ansible_managed }}

deb {{ apt__mirror }} {{ apt__distro }} {{ apt__components }}
# deb-src {{ apt__mirror }} {{ apt__distro }} {{ apt__components }}

{% if apt__distro in ("stretch", "buster") %}
deb http://security.debian.org/debian-security {{ apt__distro }}/updates {{ apt__components }}
# deb-src http://security.debian.org/debian-security {{ apt__distro }}/updates {{ apt__components }}
{% elif '/debian' in apt__mirror %}
deb http://security.debian.org/debian-security {{ apt__distro }}-security {{ apt__components }}
# deb-src http://security.debian.org/debian-security {{ apt__distro }}-security {{ apt__components }}
{% else %}
deb {{ apt__mirror }} {{ apt__distro }}-security {{ apt__components }}
# deb-src {{ apt__mirror }} {{ apt__distro }}-security {{ apt__components }}
{% endif %}

{% if apt__distro not in ("sid", "unstable", "testing") %}
deb {{ apt__mirror }} {{ apt__distro }}-updates {{ apt__components }}
# deb-src {{ apt__mirror }} {{ apt__distro }}-updates {{ apt__components }}

deb {{ apt__mirror }} {{ apt__distro }}-backports {{ apt__components }}
# deb-src {{ apt__mirror }} {{ apt__distro }}-backports {{ apt__components }}
{% endif %}
