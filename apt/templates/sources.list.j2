# {{ ansible_managed }}

deb {{ apt_mirror }} {{ apt_distro }} main non-free contrib
# deb-src {{ apt_mirror }} {{ apt_distro }} main non-free contrib

{% if apt_distro in ("stretch", "buster") %}
deb http://security.debian.org/debian-security {{ apt_distro }}/updates main contrib non-free
# deb-src http://security.debian.org/debian-security {{ apt_distro }}/updates main contrib non-free
{% endif %}
{% if apt_distro in ("bullseye", "testing") %}
deb http://security.debian.org/debian-security {{ apt_distro }}-security main contrib non-free
# deb-src http://security.debian.org/debian-security {{ apt_distro }}-security main contrib non-free
{% endif %}

{% if apt_distro in ("stretch", "buster", "bullseye", "testing") %}
# {{ apt_distro }}-updates, previously known as 'volatile'
deb {{ apt_mirror }} {{ apt_distro }}-updates main contrib non-free
# deb-src {{ apt_mirror }} {{ apt_distro }}-updates main contrib non-free

# {{ apt_distro }}-backports, previously on backports.debian.org
deb {{ apt_mirror }} {{ apt_distro }}-backports main contrib non-free
# deb-src {{ apt_mirror }} {{ apt_distro }}-backports main contrib non-free
{% endif %}
